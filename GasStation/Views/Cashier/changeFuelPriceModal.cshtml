<div class="modal fade" id="changeFuelPriceModal" tabindex="-1" aria-labelledby="changeFuelPriceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="changeFuelPriceModalLabel">Zmień cenę paliwa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zamknij"></button>
            </div>
            <div class="modal-body">
                <form id="changeFuelPriceForm">
                    <div class="mb-3">
                        <label for="fuelTypeSelect" class="form-label">Wybierz paliwo</label>
                        <select id="fuelTypeSelect" class="form-select" required>
                            <option value="">-- wybierz paliwo --</option>
                            <option value="1">Benzyna</option>
                            <option value="2">Diesel</option>
                            <option value="3">Gaz</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="newPriceInput" class="form-label">Nowa cena (zł)</label>
                        <input type="number" step="0.01" min="0.01" class="form-control" id="newPriceInput" required>
                    </div>
                </form>
                <div id="changePriceModalAlertPlaceholder" class="mt-3"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                <button type="button" class="btn btn-primary" id="btnSaveFuelPrice">Zapisz zmianę</button>
            </div>
        </div>
    </div>
</div>
