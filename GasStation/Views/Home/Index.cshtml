@model GasStation.DTO.EmployeeLoginDTO

@using GasStation.DTO 

@{
    ViewBag.Title = "Logowanie - Stacja Benzynowa"; 
    Layout = null; 
}

@{
    Response.Cache.SetCacheability(HttpCacheability.NoCache);
    Response.Cache.SetExpires(DateTime.UtcNow.AddMinutes(-1));
    Response.Cache.SetNoStore();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <link href="~/Content/css/login-style.css" rel="stylesheet" />
</head>
<body>
    <div class="login-container">
        <div class="login-container">
            <img src="~/Content/img/logo.jpg" alt="Logo Stacji Benzynowej" class="login-logo mb-4" />
            <h2>Logowanie do Stacji Benzynowej</h2>
            <!-- reszta formularza -->
        </div>
        <section id="loginForm">

            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <hr />


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                  
                    @Html.LabelFor(m => m.Login, "Login")
              
                    @Html.EditorFor(m => m.Login, new { htmlAttributes = new { @class = "form-control", placeholder = "Wprowadź login" } })
                 
                    @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">

                    @Html.LabelFor(m => m.Password, "Hasło")

                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Wprowadź hasło" })

                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                  
                    <button type="submit" class="btn btn-primary btn-block">Zaloguj</button> 

                </div>

            }
       <a class="btn btn-primary btn-block"href="~/Content/Sprawozdanie/Sprawozdanie.pdf" target="_blank">
   Sprawozdanie
</a>   
        </section>
    </div>


</body>

</html>
<style>
    .login-logo {
        display: block;
        margin: 0 auto;
        max-width: 180px;
        height: auto;
        margin-bottom:0 !important;
    }
</style>
    
