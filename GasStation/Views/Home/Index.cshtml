@model GasStation.DTO.CreateOrderDTO
@using GasStation.DTO

@{
    ViewBag.Title = "Log In - Gas Station";
    // Layout = "~/Views/Shared/_Layout.cshtml"; // Możesz odkomentować, jeśli chcesz użyć głównego layoutu
    // Jeśli nie, strona będzie miała tylko te elementy, które są zdefiniowane poniżej
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @* Podstawowe style Bootstrapa, jeśli chcesz ich użyć dla responsywności i ogólnego wyglądu przycisków/formularzy.
        Możesz je pobrać z CDN lub mieć lokalnie w projekcie.
        Jeśli nie chcesz Bootstrapa, usuń poniższą linię i opieraj się tylko na własnych stylach. *@
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="~/Content/css/login-style.css" rel="stylesheet" /> @* Link do Twojego pliku CSS dla logowania *@
</head>
<body>
    <div class="login-container">
        <h2>Log In to Gas Station</h2>
        <section id="loginForm">
            @* Ten formularz na razie nie będzie nic wysyłał, bo skupiamy się na wyglądzie.
                Gdybyś chciał podpiąć funkcjonalność, użyłbyś Html.BeginForm jak w poprzednich przykładach. *@
            <form role="form">
                @* Zwykły tag form dla samego wyglądu *@
                @* @Html.AntiForgeryToken()  // Potrzebne przy rzeczywistym formularzu MVC *@
                <hr />
                @* @Html.ValidationSummary(true, "", new { @class = "text-danger" }) // Do wyświetlania błędów *@

                <div class="form-group">
                    <label for="Login">Login</label> @* Zwykła etykieta HTML *@
                    <input type="text" id="Login" name="Login" class="form-control" placeholder="Enter your login" />
                    @* @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" }) *@
                </div>

                <div class="form-group">
                    <label for="Password">Password</label> @* Zwykła etykieta HTML *@
                    <input type="password" id="Password" name="Password" class="form-control" placeholder="Enter your password" />
                    @* @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" }) *@
                </div>

                <div class="form-group">
                    @* Zmieniony przycisk na link do CashierController -> DisplayCashierPage *@
                    @Html.ActionLink("Log In (Test View)", "Cashier_view", "Cashier", routeValues: null, htmlAttributes: new { @class = "btn btn-login" })

                </div>
            </form>
        </section>
    </div>

    @* Jeśli używasz Bootstrapa lub innej biblioteki JS, możesz tu dodać skrypty.
        Dla samego wyglądu nie są one konieczne. *@
    @* <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script> *@
</body>
</html>